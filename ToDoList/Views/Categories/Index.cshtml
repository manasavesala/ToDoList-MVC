<h1>Categories</h1>

@if (@Model.Count == 0)
{
  <h3>No categories exist!</h3>
}

@foreach (var category in Model)
{
  <h3><a href='/categories/@category.GetId()'>@category.GetName()</a></h3>
  <p><a href='/categories/@category.GetId()/delete'>Delete This Category</a></p>
  <br>
}

<p><a href='/'>Back home</a></p>
